@model WhiteCloudHomestayManagementSystem.ViewModels.CheckInVM

@{
    ViewBag.Title = "Check In";
    Layout = "~/Areas/Receptionist/Views/Shared/_ReceptionistNavbar.cshtml";
}
<link rel="stylesheet" href="~/Content/css/Receptionist/style.css">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">
                        <i class="bi bi-geo-alt-fill"></i> Check In
                    </h2>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            @Html.ValidationSummary()
                        </div>
                    }

                    <!-- Form nhập cho lễ tân -->
                    @using (Html.BeginForm("CheckIn", "ReceptionistBooking", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <!-- Booking Information -->
                            <div class="col-md-6">
                                <h3 class="mb-3">
                                    <i class="bi bi-calendar3-fill me-2"></i> Booking Information
                                </h3>
                                <div class="form-group">
                                    <label for="CheckInDate" class="fw-bold">Check-In Date</label>
                                    <input type="date" class="form-control" id="CheckInDate" name="Booking.CheckInDate" />
                                </div>
                                <div class="form-group">
                                    <label for="CheckOutDate" class="fw-bold">Check-Out Date</label>
                                    <input type="date" class="form-control" id="CheckOutDate" name="Booking.CheckOutDate" />
                                </div>
                                <div class="form-check mb-4">
                                    <input type="checkbox" class="form-check-input" id="Paid" name="Booking.Paid" />
                                    <label class="form-check-label" for="Paid">Paid</label>
                                </div>
                            </div>
                            <!-- Customer Information -->
                            <div class="col-md-6">
                                <h3 class="mb-3">
                                    <i class="bi bi-person-fill me-2"></i> Customer Information
                                </h3>
                                <div class="form-group">
                                    <label for="Customer_FullName" class="fw-bold">Full Name</label>
                                    <input type="text" class="form-control" id="Customer_FullName" name="Customer.FullName" value="@Model.Customer.FullName" />
                                </div>
                                <div class="form-group">
                                    <label for="Customer_Email" class="fw-bold">Email</label>
                                    <input type="email" class="form-control" id="Customer_Email" name="Customer.Email" value="@Model.Customer.Email" />
                                </div>
                                <div class="form-group">
                                    <label for="Customer_Phone" class="fw-bold">Phone</label>
                                    <input type="text" class="form-control" id="Customer_Phone" name="Customer.Phone" value="@Model.Customer.Phone" />
                                </div>
                            </div>
                        </div>



                        <!-- Homestay Information -->
                        <h3 class="mb-3">
                            <i class="bi bi-house-door-fill me-2"></i> Homestay Information
                        </h3>
                        <div class="row">
                            @foreach (var homestay in Model.Homestays)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card @if (homestay.Status == "available") { <text>border-success</text> }">
                                        <div class="card-body">
                                            <h5 class="card-title">@homestay.Name</h5>
                                            <p class="card-text">@homestay.Address</p>
                                            <input type="radio" id="homestay_@homestay.HomestayID" name="Booking.HomestayID" value="@homestay.HomestayID">
                                            <label for="homestay_@homestay.HomestayID">Select</label>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary">Confirm Check-In</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
