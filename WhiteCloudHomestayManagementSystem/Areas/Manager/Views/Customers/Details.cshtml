@model WhiteCloudHomestayManagementSystem.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Manager/Views/Shared/_MangerNavbar.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>Customer Information</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card p-2">
            <div class="card-body">
                <h5 class="card-title d-flex align-items-center justify-content-center">Customer Information</h5>
                <div class="row">
                    <div class="col-md-2">
                        <img src="@Url.Content(Model.IdCardImg)" alt="ID Card Image" class="card-img-top" style="max-width: 200px; max-height: 200px; margin: auto; border: 5px solid #ccc;" />
                        @Html.DisplayFor(model => model.CustomerId)

                    </div>
                    <div class="col-md-10">
                        <p class="card-text">
                            <strong>Name:</strong> @Html.DisplayFor(model => model.FullName) <br />
                            <strong>ID Card Number:</strong> @Html.DisplayFor(model => model.IdCardNum) <br />
                            <strong>Email:</strong> @Html.DisplayFor(model => model.Email) <br />
                            <strong>Phone:</strong> @Html.DisplayFor(model => model.Phone) <br />
                            <strong>Homestay:</strong> @(Model.Homestay != null ? Model.Homestay.Name : "None") <br />
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="mb-3">
    <p class="d-inline">
        @Html.ActionLink("Edit", "Edit", new { id = Model.CustomerId }, new { @class = "btn btn-primary" }) |
    </p>
    <p class="d-inline">
        @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-default" })
    </p>
</div>

