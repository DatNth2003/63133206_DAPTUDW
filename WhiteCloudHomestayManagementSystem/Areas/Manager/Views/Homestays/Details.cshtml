@model WhiteCloudHomestayManagementSystem.Models.Homestay

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="details-section">
                <h4>Homestay Information</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>Name:</dt>
                    <dd>@Html.DisplayFor(model => model.Name)</dd>
                    <dt>Address:</dt>
                    <dd>@Html.DisplayFor(model => model.Address)</dd>
                    <dt>Description:</dt>
                    <dd>@Html.DisplayFor(model => model.Description)</dd>
                    <dt>Price:</dt>
                    <dd>@Html.DisplayFor(model => model.Price)</dd>
                    <dt>Contact Phone:</dt>
                    <dd>@Html.DisplayFor(model => model.ContactPhone)</dd>
                    <dt>Contact Email:</dt>
                    <dd>@Html.DisplayFor(model => model.ContactEmail)</dd>
                    <dt>Capacity:</dt>
                    <dd>@Html.DisplayFor(model => model.Capacity)</dd>
                    <dt>Status:</dt>
                    <dd>@Html.DisplayFor(model => model.HomestayStatus.StatusName)</dd>
                </dl>
            </div>
        </div>
        <div class="col-md-6">
            <div class="details-section">
                <h4>Customer Information</h4>
                <hr />
                @if (Model.Customers != null && Model.Customers.Any())
                {
                    <dl class="dl-horizontal">
                        <dt>Name:</dt>
                        <dd>@Html.DisplayFor(model => model.Customers.First().FullName)</dd>
                        <dt>Phone:</dt>
                        <dd>@Html.DisplayFor(model => model.Customers.First().Phone)</dd>
                        <dt>Email:</dt>
                        <dd>@Html.DisplayFor(model => model.Customers.First().Email)</dd>
                    </dl>
                }
                else
                {
                    <p>No customer assigned.</p>
                }
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Back to List", "Index")
    @Html.ActionLink("Edit", "Edit", new { id = Model.HomestayId }, new { @class = "btn btn-primary" })
</p>

<style>
    .details-section {
        border: 1px solid #ddd;
        padding: 15px;
        background-color: #f9f9f9;
        margin-bottom: 20px;
    }

        .details-section h4 {
            margin-top: 0;
        }
</style>
