<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title WhiteCloud</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            flex-wrap: nowrap;
        }



        .sidebar {
            position: fixed;
            top: 56px;
            bottom: 0;
            left: 0;
            z-index: 1000;
            display: flex;
            flex-direction: column;
            flex-wrap: nowrap;
            padding: 0;
            width: 250px;
            overflow-x: hidden;
            overflow-y: auto;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            transition: width 0.2s;
        }

            .sidebar.collapsed {
                width: 50px;
            }

            .sidebar .nav-link {
                display: flex;
                align-items: center;
                font-weight: 500;
                color: #333;
            }

                .sidebar .nav-link:hover {
                    color: #007bff;
                }

            .sidebar .bi {
                margin-right: 10px;
            }

            .sidebar.collapsed .nav-link .bi {
                margin-right: 0;
            }

            .sidebar.collapsed .nav-link span {
                display: none;
            }

            .sidebar.collapsed .nav-item .submenu {
                display: none;
            }

        .main-content {
            margin-left: 250px;
            flex: 1;
            padding: 20px;
            transition: margin-left 0.2s;
        }

            .main-content.collapsed {
                margin-left: 80px;
            }

        .nav-item .submenu {
            display: none;
        }

            .nav-item .submenu.show {
                display: block;
            }

        .submenu .nav-link {
            padding-left: 30px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <i class="bi bi-cloud"></i>
                <span>WhiteCloud</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle"></i> @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>@Html.ActionLink("Manage", "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                            <li><hr class="dropdown-divider"></li>
                            <li>@Html.ActionLink("Log off", "LogOff", "Account", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })</li>
                        </ul>
                    </li>
                </ul>
            </div>
            <a href="@Url.Action("LogOff", "Account", new { area = "Admin" })" onclick="event.preventDefault(); document.getElementById('logoutForm').submit();">Log off</a>

        </div>
    </nav>


    <div class="sidebar" id="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="#" id="sidebarToggle">
                    <i class="bi bi-list"></i> <span>Collapse</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#homestaySubmenu" data-bs-toggle="collapse" aria-expanded="false">
                    <i class="bi bi-house-door"></i> <span>Homestay Management</span>
                </a>
                <ul class="nav flex-column submenu collapse" id="homestaySubmenu">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Homestays", new { area = "Admin" })"><i class="bi bi-house-fill"></i>List Homestays</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Homestays", new { area = "Admin" })"><i class="bi bi-house-add-fill"></i>Add Homestay</a>
                    </li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#serviceSubmenu" data-bs-toggle="collapse" aria-expanded="false">
                    <i class="bi bi-gear"></i> <span>Service Management</span>
                </a>
                <ul class="nav flex-column submenu collapse" id="serviceSubmenu">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Services", new { area = "Admin" })"><i class="bi bi-list-stars"></i>List Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Services", new { area = "Admin" })"><i class="bi bi-plus-circle"></i>Add Service</a>
                    </li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#employeeSubmenu" data-bs-toggle="collapse" aria-expanded="false">
                    <i class="bi bi-people"></i> <span>Employee Management</span>
                </a>
                <ul class="nav flex-column submenu collapse" id="employeeSubmenu">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Employees", new { area = "Admin" })"><i class="bi bi-person-lines-fill"></i>List Employees</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Employees", new { area = "Admin" })"><i class="bi bi-person-plus-fill"></i>Add Employee</a>
                    </li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#customerSubmenu" data-bs-toggle="collapse" aria-expanded="false">
                    <i class="bi bi-person"></i> <span>Customer</span>
                </a>
                <ul class="nav flex-column submenu collapse" id="customerSubmenu">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Customers", new { area = "Admin" })"><i class="bi bi-person-lines-fill"></i>List Customers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Customers", new { area = "Admin" })"><i class="bi bi-person-plus-fill"></i>Add Customer</a>
                    </li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#serviceSubmenu" data-bs-toggle="collapse" aria-expanded="false">
                    <i class="bi bi-gear"></i> <span>Service Management</span>
                </a>
                <ul class="nav flex-column submenu collapse" id="serviceSubmenu">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Services", new { area = "Admin" })"><i class="bi bi-list-stars"></i>List Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Create", "Services", new { area = "Admin" })"><i class="bi bi-plus-circle"></i>Add Service</a>
                    </li>
                </ul>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#reservationSubmenu" data-bs-toggle="collapse" aria-expanded="false">
                    <i class="bi bi-calendar-check"></i> <span>Reservations</span>
                </a>
                <ul class="nav flex-column submenu collapse" id="reservationSubmenu">
                    <li class="nav-item">
                        @Html.ActionLink("List Reservations", "Index", "Reservations", new { area = "Admin" }, new { @class = "nav-link" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Create Reservation", "Create", "Reservations", new { area = "Admin" }, new { @class = "nav-link" })
                    </li>
                </ul>
            </li>



        </ul>
    </div>

    <main class="main-content mt-5" id="mainContent">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            var sidebar = document.getElementById('sidebar');
            var mainContent = document.getElementById('mainContent');
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('collapsed');
        });

        document.querySelectorAll('.nav-item > a').forEach(function (navLink) {
            navLink.addEventListener('click', function () {
                var submenu = this.nextElementSibling;
                if (submenu && submenu.classList.contains('submenu')) {
                    submenu.classList.toggle('show');
                }
            });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
