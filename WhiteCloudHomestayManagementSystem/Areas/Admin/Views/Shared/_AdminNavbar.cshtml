<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="~/Content/css/Admin/admin-navbar.css" rel="stylesheet" />

</head>

<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <span class="toggle-btn" id="toggle-btn"><i class="fas fa-bars"></i></span>
            <span class="navbar-brand mb-0 h1 ml-auto">
                <i class="fas fa-cloud"></i>
                <span class="navbar-brand-text">Admin Dashboard</span>
            </span>
        </nav>
        <div class="sidebar min-vh-100">
            <div class="sidebar-header">
                <h4 class="text-center">
                    <i class="fas fa-cloud"></i>
                    <span>WhiteCloud</span>
                </h4>
            </div>
            <hr class="sidebar-divider">
            <nav class="nav flex-column">
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle position-static" href="#" id="dropdownManageAccountLink" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-users"></i> <span>Quản lý Tài khoản</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownManageAccountLink">
                        <a class="dropdown-item" href="#"><i class="fas fa-user"></i> Xem Tài khoản</a>
                        <a class="dropdown-item" href="#"><i class="fas fa-user-plus"></i> Thêm mới Tài khoản</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#"><i class="fas fa-cog"></i> Cài đặt Tài khoản</a>
                    </div>
                </div>

                <div class="dropdown">
                    <a class="nav-link dropdown-toggle position-static" href="#" id="dropdownManageRoleLink" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user-tag"></i> <span>Quản lý Vai trò</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownManageRoleLink">
                        <a class="dropdown-item" href="#"><i class="fas fa-users-cog"></i> Xem Vai trò</a>
                        <a class="dropdown-item" href="#"><i class="fas fa-user-plus"></i> Thêm mới Vai trò</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#"><i class="fas fa-cog"></i> Cài đặt Vai trò</a>
                    </div>
                </div>

                <div class="dropdown">
                    <a class="nav-link dropdown-toggle position-static" href="#" id="dropdownLogoutLink" role="button" data-toggle="dropdown"
                       aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownLogoutLink">
                        <a class="dropdown-item" href="#">Logout 1</a>
                        <a class="dropdown-item" href="#">Logout 2</a>
                        <a class="dropdown-item" href="#">Logout 3</a>
                    </div>
                </div>
            </nav>
        </div>

        <div class="main-content">
            <div class="container-fluid" style="overflow-y: auto; max-height: 100vh;">
                @RenderBody()
            </div>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('toggle-btn').addEventListener('click', function () {
            document.querySelector('.sidebar').classList.toggle('collapsed');
            document.querySelector('.main-content').classList.toggle('collapsed');
            document.querySelector('.navbar').classList.toggle('collapsed');
        });
    </script>
</body>

</html>
